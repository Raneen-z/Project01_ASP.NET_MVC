@page
@model RickAndMorty.Views.Characters.IndexModel
@{
    List<CharacterModel> characters = (List<CharacterModel>)ViewBag.Characters;
}

    <div class="container">
        <div class="row">
            @foreach (var character in characters)
            {
                <div class="card mt-3 mr-4 characterCard" style="width: 30rem">
                    <div class="row">
                        <div class="col">
                            <img class="card-img-top" src=@character.Image alt="Card image cap" />
                        </div>
                        <div class="col">
                            <div class="card-body flex-row">
                                <h5 class="card-title font-weight-bold pb-2">@character.Name @(character.Gender == "Male" ? "♂️":"♀")</h5>
                                <h6>@character.Status | @character.Species</h6>
                                <a href="/characters/info/@character.Id" class="btn btn-warning mt-5">More Info</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>


